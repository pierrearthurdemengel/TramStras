{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}
{% block style %}

{% endblock %}

{% block header %}
	<head>
	</head>
{% endblock %}

{% block body %}



	{% if app.user %}
		<div class="custom-login-info mb-3">
			Tu es connecté :
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Se déconnecter</a>
		</div>
	{% else %}
		<form method="post" class="custom-login-form">
			{% if error %}
				<div class="custom-alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1 class="custom-login-title h3 mb-3 font-weight-normal">Se connecter</h1>
			<label for="inputEmail" class="custom-login-label">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="custom-login-input form-control" autocomplete="email" required autofocus>
			<label for="inputPassword" class="custom-login-label">Password</label>
			<input type="password" name="password" id="inputPassword" class="custom-login-input form-control" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button onclick="onClick(event)" class="custom-login-button btn btn-lg btn-primary" type="submit">
				Se connecter
			</button>


		<div class="mt-3">
			<a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?</a>
		</div>
		</form>

	{% endif %}
{% endblock %}

